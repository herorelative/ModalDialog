@if(Show){
	<div class="dialog-container">
		<div class="dialog">
			<div>@ChildContent</div>
			<div>
				<button class="btn btn-primary" @onclick="OnOk">OK</button>
			</div>
		</div>
	</div>
}

@code {
	[Parameter]
	public bool Show{get;set;}

	[Parameter]
	public EventCallback OnOk{get;set;}

	[Parameter]
	public RenderFragment ChildContent{get;set;}
}